<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyl.myacg.modules.tuijian.dao.ITuijianDao">

    <!--
        <resultMap id="subao" type="com.xyl.myacg.modules.subao.entity.Subao">
            <result column="id" property="id" jdbcType="VARCHAR"/>
            <result column="content" property="content" jdbcType="VARCHAR"/>
        </resultMap>
    -->


    <sql id="tuijianColumns">
        a.id AS "id",
        a.content AS "content"
    </sql>



    <select id="findList" resultType="com.xyl.myacg.modules.tuijian.entity.Tuijian">
        SELECT
        <include refid="tuijianColumns"/>
        FROM tuijian a
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            <if test="content != null and content != ''">
                AND a.content like CONCAT(CONCAT('%', #{content}), '%')
            </if>
        </where>

    </select>

    <update id="update">
        UPDATE tuijian SET
        content = #{content}
        WHERE id = #{id}
    </update>

    <update id="delete">
        UPDATE tuijian SET
        del_flag = #{DEL_FLAG_DELETE}
        WHERE id = #{id}
    </update>

    <insert id="insert">
        insert into tuijian(id,content,del_flag) VALUES
        (#{id},#{content},#{delFlag})
    </insert>


    <select id="findPage" resultType="com.xyl.myacg.modules.tuijian.entity.Tuijian">
        select id,content from

        <![CDATA[(select id,content,rownum rn from tuijian where del_flag='0' and rownum <= #{end}) temp
        where temp.rn > #{begin}]]>
    </select>

</mapper>